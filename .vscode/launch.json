    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/mainIPT.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "g++ build active file",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Additional libs for lldb",
                    "name": "LD_LIBRARY_PATH",
                    "text": "${LD_LIBRARY_PATH}:${env:HOME}/install/HDF5/1.10.6/lib"
                }
            ]
        },
        {
            "name": "(lldb) Launch CMake",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MAIN",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [],
            "preLaunchTask": "CMake debug active file"
